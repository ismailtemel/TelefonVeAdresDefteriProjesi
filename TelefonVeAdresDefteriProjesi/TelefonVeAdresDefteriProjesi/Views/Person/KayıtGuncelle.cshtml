@model EntityLayer.Concrete.Person
@{
    ViewData["Title"] = "KayıtGuncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>KayıtGuncelle</h1>
@using (Html.BeginForm("KayıtGuncelle", "Person", FormMethod.Post))
{
    @Html.HiddenFor(x=>x.PersonID)
    <br />
    @Html.Label("Ad")
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />
    @Html.Label("Soyad")
    @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
    <br />
    @Html.Label("Yaş")
    @Html.TextBoxFor(x => x.Age, new { @class = "form-control" })
    <br />
    <button class="btn btn-success">Güncelle</button>
}
